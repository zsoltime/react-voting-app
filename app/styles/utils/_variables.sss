$font-stack-sans: Roboto, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif
$font-stack-serif: 'Roboto Slab', Georgia, 'Times New Roman', serif
$font-stack-mono: Inconsolata, Monaco, Consolas, 'Courier New', monospace
$font-size: 1rem
$font-weight: 400
$line-height: 1.5

$background-color: #efebe9
$text-color-light: rgba(#fff, .8)
$text-color-dark: rgba(#000, .75)
$text-color: $text-color-dark
$link-color: #009688
$button-color: $link-color
